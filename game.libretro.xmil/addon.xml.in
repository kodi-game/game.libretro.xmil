<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.xmil"
		name="Sharp X1 (X Millennium)"
		version="0.60.0.12"
		provider-name="yui">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>dx1|zip|2d|2hd|tfd|d88|88d|hdm|xdf|dup|cmd</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Sharp X1 (X Millennium) 0.60</summary>
		<description lang="en_GB">X millennium was born in the late 1990s as X1R, a real-time mode fork of X1EMU.

Supported files: .dx1, .zip, .2d, .2hd, .tfd, .d88, .88d, .hdm, .xdf, .dup, .cmd</description>
		<license>BSD</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.xmil</source>
	</extension>
</addon>
